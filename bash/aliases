function hp() {
  branch=$(git rev-parse --abbrev-ref HEAD 2> /dev/null)
  echo ""
  echo "Deploying to GitHub"
  echo "-------------------"
  git push origin "$branch"
  echo ""
  echo "Deploying to Heroku"
  echo "-------------------"
  git push heroku "$branch":master
  echo ""
}

